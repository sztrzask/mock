                    <li><a href="#"><img src="Content/images/11.png" alt="img02"><h3>Project 11</h3></a></li>
                  
                </ul>
            </section>
        </div>
        <div id="about"  style="background-color:green; height:800px"></div>
        <div id="contact"  style="background-color:blue; height:800px"></div>
    </section>

    <footer></footer>
    <script src="~/Scripts/snap.svg-min.js"></script>
    <script src="~/Scripts/svgLoader.js"></script>
    <script>
        var aloader = new SVGLoader(document.getElementById('loader'), { speedIn: 400, easingIn: mina.easeinout });
        var triggered = false;
        var loader = {
            show: function () { }, hide: function ()
            {
            }
        };
    </script>
    <script src="~/Scripts/pace.min.js"></script>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.mb.YTPlayer.js"></script>
    <script src="~/Scripts/jquery.nav.js"></script>
  

    <script src="~/Scripts/modernizr.custom.js"></script>
    <script src="~/Scripts/masonry.pkgd.min.js"></script>
    <script src="~/Scripts/imagesloaded.pkgd.min.js"></script>
    <script src="~/Scripts/colorfinder-1.1.js"></script>
    <script src="~/Scripts/gridScrollFx.js"></script>
    <script>
  
        $(".player").mb_YTPlayer();
        $(".player").on("YTPStart", function ()
        {
            if (!triggered)
            {
                aloader.show();
                setTimeout(function ()
                {
                    loader = new SVGLoader(document.getElementById('loader2'), { speedIn: 400, easingIn: mina.easeinout });
                    document.getElementById('loader').remove();

                }, 400);
                triggered = true;
                $(document).ready(function ()
                {
                    $('#navigation').onePageNav({
                        scrollChange: function(elem)
                        {
                            
                        }
                    });
                });
            }
        });
        new GridScrollFx(document.getElementById('grid'), {
            viewportFactor: 0.4
        });

    </script>

 
    @RenderSection("Scripts", required: false)

</body>
</html>